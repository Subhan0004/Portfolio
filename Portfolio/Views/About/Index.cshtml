@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title"> @ViewBag.value1 </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>No</label>
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", Style = "background:#2A3038;", @readonly = true })
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Age</label>
                        @Html.TextBoxFor(x => x.Age, new { @class = "form-control", @max = "100", @min = "0", type = "number", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Image Url</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @required = "required" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                </form>
            </div>
        </div>
    </div>
}


