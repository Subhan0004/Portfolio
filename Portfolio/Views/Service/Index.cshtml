@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-title">@ViewBag.value1</p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="py-1">
                                    <img src="@item.ImageUrl" style="background:white" alt="image" />
                                    @item.Title
                                </td>
                                <td><a href="/Service/UpdateService/@item.Id" class="btn btn-outline-success">Update</a></td>
                                <td><a href="/Service/DeleteService/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Service/AddService/" class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>
</div>

