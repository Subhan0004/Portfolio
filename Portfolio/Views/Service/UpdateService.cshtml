@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title"> @ViewBag.value1 </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>No</label>
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", Style = "background:#2A3038;", @readonly = true })
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Image Url</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @required = "required" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                </form>
            </div>
        </div>
    </div>
}

