@using EntityLayer.Concrete
@model List<Skill>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-title">@ViewBag.value1</p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Title</th>
                            <th>Rate</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @item.Value%"
                                             aria-valuenow=" @item.Value" aria-valuemin="0" aria-valuemax="100">@item.Value%</div>
                                        </div>
                                    </td>
                                    <td><a href="/Skill/UpdateSkill/@item.Id" class="btn btn-outline-success">Update</a></td>
                                    <td><a href="/Skill/DeleteSkill/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                </tr>
                            }
                    </tbody>
                </table>
                <br />
                <a href="/Skill/AddSkill" class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>
</div>


