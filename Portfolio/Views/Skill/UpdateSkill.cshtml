@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title"> @ViewBag.value1 </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>No</label>
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", Style = "background:#2A3038;", @readonly = true })
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(x => x.Title)
                    </div>
                    <div class="form-group">
                        <label>Rate</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control",@max="100", @min="0", @required = "required" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                </form>
            </div>
        </div>
    </div>
}
