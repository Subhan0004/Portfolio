@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateExperience", "Experience", FormMethod.Post))
{
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-title"> @ViewBag.value1 </p>
            <form class="forms-sample">
                <div class="form-group">
                    <label>Id</label>
                   @Html.TextBoxFor(x=>x.Id, new {@class="form-control", Style = "background:#2A3038;", @readonly = true })
                </div>
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(x=>x.Name)
                </div>
                <div class="form-group">
                    <label>Date</label>
                    @Html.TextBoxFor(x => x.Date, "{0:d MMM yyyy}", new { @class = "form-control" , type="date", @required = "required" })
                </div>
                <div class="form-group">
                    <label>Image Url</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @required = "required" })
                </div>
                <div class="form-group">
                    <label>Description</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @required = "required" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Save</button>
            </form>
        </div>
    </div>
</div>
}
