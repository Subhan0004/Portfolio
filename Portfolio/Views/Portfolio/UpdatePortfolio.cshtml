@model EntityLayer.Concrete.Portfolio

@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdatePortfolio", "Portfolio", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title"> @ViewBag.value1 </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>No</label>
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", Style = "background:#2A3038;", @readonly = true })
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        @Html.TextBoxFor(x => x.Status, new { @class = "form-control",  @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Rate</label>
                        @Html.TextBoxFor(x => x.Rate, new { @class = "form-control", @max="100",@min="0", type = "number",@required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Image Url</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label>Project Url</label>
                        @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "form-control", @required = "required" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                </form>
            </div>
        </div>
    </div>
}



