@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddPortfolio", "Portfolio", FormMethod.Post))
{
    <br />
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title"> @ViewBag.value1 </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" placeholder="Name" name="Name" required>
                        @Html.ValidationMessageFor(x => x.Name)

                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <input type="text" class="form-control" placeholder="Status" name="Status" required>
                    </div>
                    <div class="form-group">
                        <label>Rate</label>
                        <input type="number" class="form-control" max="100" min="0" placeholder="Rate" name="Rate" required>
                    </div>
                    <div class="form-group">
                        <label>Image Url</label>
                        <input type="text" class="form-control" placeholder="Image Url" name="Image Url" required>
                    </div>
                    <div class="form-group">
                        <label>Project Url</label>
                        <input type="text" class="form-control" placeholder="Project Url" name="Project Url" required>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                </form>
            </div>
        </div>
    </div>
}


