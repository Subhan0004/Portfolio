@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projects</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Project</th>
                                <th>Rate</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Id</td>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                        @item.Name
                                    </td>
                                    <td> @item.Rate</td>
                                    <td> @item.Status </td>
                                    <td><a href="@item.ProjectUrl" target="_blank" class="btn btn-outline-info">Detail</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>